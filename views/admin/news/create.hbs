<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Thêm tin tức</h1>
            </div>
            <!-- /.col-lg-12 -->
            <div class="col-lg-12" >
                <form action="/admin/category/create" method="POST">
                    <div class="form-group">
                        <label>Thuộc danh mục</label>
                        <select class="form-control" name="" id="">
                            <option value="0">Chọn danh mục</option>
                            <option value="1">Ngoại hạng</option>
                            <option value="2">Thực phẩm</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Tên bài viết</label>
                        <input class="form-control" name="name_category" value="" placeholder="Nhập tên danh mục" />
                    </div>
                    <div class="form-group">
                        <label>Alias</label>
                        <input class="form-control" name="alias"  value="" placeholder="Nhập alias" />
                    </div>
                    <div class="form-group">
                        <label>Tóm tắt</label>
                        <input class="form-control" name="excerpt"  value="" placeholder="Nhập tóm tắt" />
                    </div>
                    <div class="form-group">
                        <label>Nội dung bài viết</label>
                        <textarea name="editor1" id="editor1" class="ckediter" ></textarea>
                    </div>
                    <div class="checkbox">
                        <label><input type="checkbox" value="">Nổi bật</label>
                    </div>
                    <input type="hidden" name="_csrf" value="{{csrfToken}}">
                    <button type="submit" class="btn btn-default">Thêm danh mục</button>
                    <button type="reset" class="btn btn-default">Reset</button>
                    <form>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>