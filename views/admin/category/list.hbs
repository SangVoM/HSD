<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Tin tức
                    <small>Danh sách danh mục</small>
                </h1>
            </div>
            <!-- /.col-lg-12 -->
            <div class="col-md-12">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr align="center">
                        <th>ID</th>
                        <th>Danh mục</th>
                        <th>Alias</th>
                        <th>Xoá</th>
                        <th>Sửa</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{# each allCategory}}
                    <tr class="odd gradeX" align="center">
                        <th>1</th>
                        <th>{{this.name}}</th>
                        <th>{{this.alias}}</th>
                        <td class="center"><i class="fa fa-trash-o  fa-fw"></i><a onclick="return confirm('Bạn có chắc muốn xóa !')" href="/admin/category/delete/{{id}}"> Xoá</a></td>
                        <td class="center"><i class="fa fa-pencil fa-fw"></i> <a href="/admin/category/edit/{{alias}}">Sửa</a></td>
                    </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->