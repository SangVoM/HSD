<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Thêm danh mục</h1>
            </div>
            <!-- /.col-lg-12 -->
            <div class="col-lg-12">
                {{# if messages }}
                    <div class="alert alert-success">
                        {{messages}}
                    </div>
                {{/if}}

                {{# if message_err }}
                    <div class="alert alert-danger">
                        {{message_err}}
                    </div>
                {{/if}}

                <form action="/admin/category/create" method="POST">
                    <div class="form-group">
                        <label>Tên thể loại</label>
                        <input class="form-control" name="name_category" value="" placeholder="Nhập tên danh mục" />
                    </div>
                    <div class="form-group">
                        <label>Alias</label>
                        <input class="form-control" name="alias"  value="" placeholder="Nhập alias" />
                    </div>
                    <input type="hidden" name="_csrf" value="{{csrfToken}}">
                    <button type="submit" class="btn btn-default">Thêm danh mục</button>
                    <button type="reset" class="btn btn-default">Reset</button>
                <form>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>