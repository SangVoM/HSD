<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Sửa danh mục</h1>
            </div>
            <!-- /.col-lg-12 -->
            <div class="col-lg-7" style="padding-bottom:120px">
                {{# if success_edit_category }}
                    <div class="alert alert-success">
                        {{success_edit_category}}
                    </div>
                {{/if}}

                {{# if err_edit_category }}
                    <div class="alert alert-danger">
                        {{err_edit_category}}
                    </div>
                {{/if}}

                <form action="/admin/category/edit" method="POST">
                    <div class="form-group">
                        <label>Tên thể loại</label>
                        <input type="hidden" name="id_category" value="{{category.id}}">
                        <input class="form-control" name="category_name" value="{{category.name}}" placeholder="Nhập tên danh mục" />
                    </div>
                    <div class="form-group">
                        <label>Alias</label>
                        <input class="form-control" name="alias" value="{{category.alias}}" placeholder="Nhập alias" />
                    </div>
                    <input type="hidden" name="_csrf" value="{{csrfToken}}">
                    <button type="submit" class="btn btn-default">Sửa danh mục</button>
                    <button type="reset" class="btn btn-default">Reset</button>
                    <form>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>