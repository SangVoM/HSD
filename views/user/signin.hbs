<div class="login-wrap">
    <span class="over"></span>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 wrap-content-login">
                <h2>Đăng nhập</h2>
                {{#if hasErrors}}
                    <div class="alert alert-danger">
                        {{#each messages}}
                            <p>{{this}}</p>
                        {{/each}}
                    </div>
                {{/if}}
                <form action="/user/signin" method="post">
                    <div class="form-group">
                        <label for="phone">Số điện thoại</label>
                        <input type="text" id="phone_number" name="phone" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="password">Mật khẩu</label>
                        <input type="password" id="password" name="password" class="form-control">
                    </div>

                    <input type="hidden" name="_csrf" value="{{csrfToken}}">
                    <p><button type="submit" class="btn btn-success form-control">Đăng nhập</button></p>
                    <p><a href="/auth/facebook" class="btn btn-primary form-control"><i class="fa fa-facebook-f"></i> Đăng nhập với facebook</a></p>
                    <p><a href="/auth/google" class="btn btn-danger form-control"><i class="fa fa-google" style="color: red;"></i> Đăng nhập với Google</a></p>
                </form>
            </div>
        </div>
    </div>
</div>
